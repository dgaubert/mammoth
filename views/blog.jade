extends layout

block content
    
  div.blog
    div.filter
      div.row
        label.field
          span Title:
          input#title.ui-corner-all
        label.field
          span Autor:
          input#author.ui-corner-all
      div.row
        label.field
          span Inicio:
          input#start.date.ui-corner-all
        label.field
          span Fin:
          input#end.date.ui-corner-all
        label.field
          span Tag:
          input#tag.ui-corner-all
      div.row.search
        a#search(href="#") Buscar
    - each post in posts
      div.post
        div.post-title
          h2.title #{post.title}
          h3.created [ #{post.created} - 
          h3.author #{post.author} ]
        div.post-abstract #{post.abstract}
        div.post-action
          a.link.ui-corner-all(href='/blog/#{post.slug}') Leer m&aacutes
          - each tag in post.tags
            h3.tag.ui-corner-all #{tag}
            h3.tag1 #{tag}

    ul.pagination.ui-widget.ui-helper-clearfix
      li.pagination-icon.ui-state-default.ui-corner-all
        span.ui-icon.ui-icon-carat-1-w
      li.pagination-info
        span.pagination-info-text #{pagination}
      li.pagination-icon.ui-state-default.ui-corner-all    
        span.ui-icon.ui-icon-carat-1-e

extends layout
block content
  div.wrapper-post
    div.column-1
      div.post
        hgroup.post-title
          h2.title #{post.title}
          h3.created  [ #{post.created} - 
          h3.author #{post.author} ]
        div.post-content
          p #{post.content}
        div.post-action
          a.link(href='/blog') Volver
          a.category #{post.category}
          - each tag in post.tags
            a.tag #{tag}
    div.column-2
      div.categories
        h3 Categorias
        ul
          - each category in categories
            li
              a(href='/blog/category/#{category.name}') #{category.name} [#{category.count}]
      div.similars
        h3 Post similares
        ul
          - each similar in similars
            li
              a(href='/blog/#{similar.slug}') #{similar.title}

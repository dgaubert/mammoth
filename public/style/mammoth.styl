// Reset
*
  margin 0
  padding 0
div.blog
  width 100%
// Post
div.post
  width 100%
  padding 0 0 20px 0
div.post-title
  border-bottom 1px solid #ccc
  padding 0 0 4px
h2.title
  display inline
h3.created
h3.author
  display inline
  font-size 0.9em
  color #ccc
h3.tag
  display inline
// Pagination
ul.pagination
  float right
  li
    margin 2px
    position relative
    cursor pointer
    float left
    list-style none
	span.ui-icon
      margin 4px 4px
    span.pagination-info-text
      &:hover
        color #888
      font-size 0.9em